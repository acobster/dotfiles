# Navigational aliases
alias ..='upandaway 1'
alias ...='upandaway 2'
alias ....='upandaway 3'
alias .....='upandaway 4'
alias ......='upandaway 5'

upandaway() {
  if [[ $1 = 1 ]] ; then
    updir='../'
  elif [[ $1 = 2 ]] ; then
    updir='../../'
  elif [[ $1 = 3 ]] ; then
    updir='../../../'
  elif [[ $1 = 4 ]] ; then
    updir='../../../../'
  elif [[ $1 = 5 ]] ; then
    updir='../../../../../'
  fi

  cd "$updir$2"
}


# Set up aliases
alias aliases='vim ~/dotfiles/.aliases'
alias al='vim ~/.aliases'
alias functions='vim ~/dotfiles/.functions'
alias ssh-config='vim ~/.ssh/config'
alias fn='vim ~/.functions'
alias svb='vim ~/dotfiles/.bash_profile'
alias vb='vim ~/.bash_profile'
alias vimrc='vim ~/.vimrc'
alias dtf='cd ~/dotfiles'
alias dtfbin='cd ~/dotfiles/bin'
alias x='xclip -selection clipboard'
alias la='ls -la'
alias lah='ls -lah'
alias lz='ls -Z'
alias drop='cd ~/Dropbox'
alias v='vim'
alias vimsess='ls ~/.vim/session'
alias vs='vimsess'
alias kb='keybase'
