#!/usr/bin/env bash

# Script for installing basic software outside of NixOS

# Install essentials.
# TODO get neovim working...
nix-env -iA nixpkgs.curl \
  nixpkgs.git \
  nixpkgs.silver-searcher \
  nixpkgs.tmux \
  nixpkgs.tree \
  nixpkgs.vim \
  nixpkgs.nettools \
  nixpkgs.xclip \
  nixpkgs.ulauncher

# Install misc. software.
nix-env -iA nixpkgs.keybase \
  nixpkgs.brave \
  nixpkgs.gimp \
  nixpkgs.ungoogled-chromium \
  nixpkgs.rpi-imager \
  nixpkgs.signal-desktop \
  nixpkgs.discord \
  nixpkgs.dropbox \
  nixpkgs.syncthing \
  nixpkgs.zulip \
  nixpkgs.vlc
