  sudo apt-get install -y \
    docker-compose \
    expect \
    fonts-firacode \
    gconf-service \
    gconf-service-backend \
    gconf2 \
    httpie \
    inotify-tools \
    jq \
    libappindicator1 \
    libgconf-2-4 \
    libindicator7 \
    mariadb-client \
    mariadb-server \
    net-tools \
    nodejs \
    php \
    php-mbstring \
    php-mysql \
    php-xml \
    silversearcher-ag \
    tmux \
    tree \
    vim \
    xclip \
    xdotool
fi
