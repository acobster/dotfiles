#!/usr/bin/env bash

if [[ "$(which apt-get)" ]] ; then
  echo 'installing Linux packages...'
  sudo apt-get install -y \
    vim \
    xclip \
    tree \
    tmux \
    php \
    php-xml \
    php-mysql \
    php-mbstring \
    mariadb-server \
    mariadb-client \
    jq \
    nodejs \
    net-tools \
    docker-compose \
    httpie \
    inotify-tools \
    xdotool \
    expect \
    silversearcher-ag
fi
