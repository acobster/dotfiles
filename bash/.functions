psgrep() {
  ps aux | grep -i $1 | grep -v grep
}

portgrep() {
  sudo netstat -tulpn | grep $1 | grep -v grep
}

grepkill() {
  ps aux | grep $1 | grep -v grep | kill `awk '{print $2}'`
}
